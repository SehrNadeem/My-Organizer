<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.myproj.JsonActivity" >

<TextView
        android:id="@+id/textView_tile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="135dp"
        android:text="@string/jsonTitle_str" />

   <TableLayout
       android:id="@+id/Table_Json"
       android:layout_width="match_parent"
       android:layout_height="441dp"
       android:layout_below="@+id/textView_tile" >

        <TableRow
            android:id="@+id/tableRow1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >
            
            <TextView
            android:id="@+id/tableCol1"
            android:text=""
            android:padding="3dip" />
            <TextView
            android:id="@+id/tableCol2"
            android:text=""
            android:padding="3dip" />
            
        </TableRow>

        <TableRow
            android:id="@+id/tableRow2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >
            
             <TextView
            android:id="@+id/tableCol3"
            android:text=""
            android:padding="3dip" />
            <TextView
            android:id="@+id/tableCol4"
            android:text=""
            android:padding="3dip" />
            
        </TableRow>

    </TableLayout>
    

</RelativeLayout>
